<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="base.open_module_tree" model="ir.actions.act_window">
        <field name="view_mode">kanban,tree,form,split</field>
    </record>



    <!-- Define view tree and form inside split tag directly -->
    <record id="customer_split_view" model="ir.ui.view">
        <field name="name">customer.split.view</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <split>
                <tree>
                    <field name="name" />
                    <field name="phone" />
                    <field name="city" />
                    <field name="category_id" />
                </tree>
                <form create="1" duplicate="1">
                    <header>
                        <field name="active" widget="statusbar" />
                    </header>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="phone" />
                        </group>
                        <group>
                            <field name="city" />
                            <field name="category_id" />
                        </group>
                    </group>
                </form>
            </split>
        </field>
    </record>




</odoo>